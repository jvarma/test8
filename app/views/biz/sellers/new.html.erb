<h1>Sign up</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@seller) do |f| %>
		<%= render 'shared/error_messages' %>

		<%= f.label :name, "Name of your business" %>
		<%= f.text_field :name %>

		<%= f.label :email, "Primary email id" %>
		<%= f.text_field :email %>

		<%= f.label :password, "Create a password" %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation, "Retype password" %>
		<%= f.password_field :password_confirmation %>

		<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
		<br /><br />
		<div><%= link_to "Already have an account? Login here!", signin_path %></div>
</div>

<% end %>
</div>
