<script>

	function initialize() {
		var myLatLng = new google.maps.LatLng(gon.lat, gon.lng);

		var mapProp = {
			center: myLatLng,
  			zoom:18,
  			panControl: false,
  			zoomControl: false,
  			mapTypeId:google.maps.MapTypeId.ROADMAP
  		};
				
		var map=new google.maps.Map(document.getElementById("map-canvas"), mapProp);

		var contentString = "This is a gas station!";

		var infowindow = new google.maps.InfoWindow({
			content: contentString
		});
		var gas_station_icon_url = "http://" + gon.hostname + "/icons/gas_station_24X24.png"

		for (var x = 0; x < gon.latlng.length; x++) {
			var position = new google.maps.LatLng(gon.latlng[x][0], gon.latlng[x][1]);
			var marker = new google.maps.Marker({
				position: position,
				map: map,
				icon: gas_station_icon_url
			});
			google.maps.event.addListener(marker, 'mouseover', function(){
				infowindow.open(map, this);
			});
		}

	}
	google.maps.event.addDomListener(window, 'load', initialize);
</script>
